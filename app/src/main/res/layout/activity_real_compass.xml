<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RealCompass"
    android:background="@drawable/gradient_background_compass">

    <ImageView
        android:id="@+id/Compass_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/DegreeTv"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/compass_icon"
        tools:layout_editor_absoluteX="-25dp"
        tools:layout_editor_absoluteY="69dp" />

    <TextView
        android:id="@+id/DegreeTv"
        android:layout_width="94dp"
        android:layout_height="22dp"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="32dp"
        android:text="Heading: 0.0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/Direction"
        android:layout_width="57dp"
        android:layout_height="20dp"
        android:layout_marginStart="188dp"
        android:layout_marginLeft="188dp"
        android:layout_marginTop="12dp"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/DegreeTv" />

</androidx.constraintlayout.widget.ConstraintLayout>